<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr><td> </td></tr>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><td><%= link_to User.find(event.owner_id).email, "users/#{event.owner_id}" %></td>
      </tr>
      <tr><td> </td></tr>
      <tr class='show-edit-destroy'>
        <td><%= link_to 'Show', event %>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <tr><td>-</td></tr>
    <% end %>
  </tbody>
</table>

<br>

